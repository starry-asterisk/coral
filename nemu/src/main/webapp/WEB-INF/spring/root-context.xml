	  <property value="jdbc:oracle:thin:@192.168.0.204:1521:xe" name="url" />
<!--  <property value="oracle.jdbc.driver.OracleDriver" name="driverClassName" />
	  <property value="jdbc:oracle:thin:@192.168.0.216:1521:xe" name="url" />  -->
	  <!-- 오라클 사용자 이름 -->
	  <property value="book_ex" name="username" />
	  <!-- 오라클 사용자 비밀번호 -->
	  <property value="book_ex" name="password" />
	</bean>
</beans>
